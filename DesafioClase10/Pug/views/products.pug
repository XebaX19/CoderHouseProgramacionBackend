extends ./layout
block main
    h3(class="text-primary") Vista de Productos
    if arrayProductos
        div(class="table-responsive")
            table(class="table table-dark")
                tr(class="text-warning")
                    th(class="font-weight-bold") Nombre
                    th(class="font-weight-bold") Precio
                    th(class="font-weight-bold") Foto
                each prod in arrayProductos
                    tr
                        td=prod.title
                        td=prod.price
                        td
                            img(src=prod.thumbnail, alt=prod.title, width="100", height="100")
    else
        h3(class="alert alert-warning") No se encontraron productos
    a(class="btn btn-primary", href="/") Volver al inicio
